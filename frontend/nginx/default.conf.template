server {
  listen       ${PORT};
  server_name  _;

  root   /usr/share/nginx/html;
  index  index.html;

  # SPA fallback
  location / {
    try_files $uri /index.html;
  }

  # est√°ticos com cache
  location /static/ {
    expires 1y;
    add_header Cache-Control "public, immutable";
  }

  gzip on;
  gzip_types text/plain text/css application/json application/javascript application/xml image/svg+xml;
}
